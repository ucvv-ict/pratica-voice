APP_NAME=PraticaVoice
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://praticavoice.example.it

APP_LOCALE=it
APP_FALLBACK_LOCALE=it

LOG_CHANNEL=stack
LOG_LEVEL=info

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=praticavoice
DB_USERNAME=praticavoice
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

SESSION_DRIVER=database
QUEUE_CONNECTION=database
CACHE_STORE=database

# Tenant on-prem
PRATICAVOICE_MODE=onprem
TENANT_SLUG=pelago
TENANT_NAME="Comune di Pelago"
TENANT_PDF_DIR=PDF
PRACTICE_PDF_BASE_PATH=/mnt/praticavoice-pdf/pelago/PDF
PDF_INDEX_LIMIT=50000

# Storage link: php artisan storage:link
FILESYSTEM_DISK=public

# Mail (esempio log)
MAIL_MAILER=log
MAIL_FROM_ADDRESS=no-reply@example.it
MAIL_FROM_NAME="${APP_NAME}"

# OpenAI / AI (facoltativo)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1

# R2 / S3 compatibile (facoltativo)
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_ENDPOINT=
R2_REGION=auto
R2_URL_EXPIRY_MINUTES=10080

# Vite
VITE_APP_NAME="${APP_NAME}"
